<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share"
            android:layout_marginTop="35dp"
            android:gravity="top|center"
            android:layout_gravity="center_horizontal|bottom"
            android:textAppearance="?android:textAppearanceMedium" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center"
            android:gravity="center_vertical|center"
            >
            <ImageView
                android:id="@+id/instagram"
                android:src="@drawable/instagram"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/haircut"
                android:layout_alignTop="@+id/haircut"
                android:scaleType="fitCenter"
                />
            <ImageView
                android:id="@+id/haircut"
                android:src="@drawable/haircut_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="24dp"
                android:layout_below="@+id/twitter"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                />
            <ImageView
                android:id="@+id/facebook"
                android:src="@drawable/facebook"
                android:layout_width="60dp"
                android:layout_toLeftOf="@+id/haircut"
                android:layout_alignTop="@+id/haircut"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                />
            <ImageView
                android:id="@+id/twitter"
                android:src="@drawable/twitter"
                android:layout_width="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                />
            <ImageView
                android:id="@+id/snapchat"
                android:src="@drawable/snapchat"
                android:layout_width="60dp"
                android:layout_below="@+id/haircut"
                android:layout_alignLeft="@+id/haircut"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>